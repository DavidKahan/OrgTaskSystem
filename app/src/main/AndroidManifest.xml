<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shenkar.orgtasksystem">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name=".views.SplashActivity"
            android:label="@string/ots">
        </activity>
        <activity
            android:name=".views.LoginActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".views.CreateTeamActivity"
            android:label="@string/title_activity_create_team"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.CreateEditTaskActivity"
            android:label="@string/title_activity_create_edit_task"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".views.ReportTaskStatusActivity"
            android:label="@string/title_activity_report_task_status"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".views.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
